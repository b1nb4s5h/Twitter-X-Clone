    <form class="xcloneUser-follow" data-user-id="<?php echo $connect_people["id"]; ?>">
        <input type="hidden" name="user_id" value="<?php echo $connect_people["id"]; ?>">
        <button class="follow-value"><?php echo xclone_translate("follow"); ?></button>
    </form>
