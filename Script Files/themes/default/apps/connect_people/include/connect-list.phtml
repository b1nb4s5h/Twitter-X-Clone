<script>
    $(document).ready(function() {
        // Takip butonuna tıklama işlemi
        $('.xcloneUser-follow').on('click', '.follow-value', function(e) {
            e.preventDefault();

            var form = $(this).closest('.xcloneUser-follow'); // Butona ait formu seç
            var user_id = form.find('input[name="user_id"]').val(); // Kullanıcının ID'sini al
            var button = form.find('.follow-value'); // Butonu seç

            // Takip butonuna tıklama durumu
            if (button.data('clicked')) {
                return; // Butona ardışık tıklamaları engelle
            }

            button.data('clicked', true); // Butona tıklama durumunu işaretle

            var follow_status = button.text();

            $.ajax({
                url: '/apps/ajax/profile/user-follow.phtml',
                method: 'POST',
                data: {
                    user_id: user_id,
                    follow_status: follow_status
                },
                success: function(data) {
                    if (follow_status == '<?php echo xclone_translate("follow"); ?>') {
                        button.text('<?php echo xclone_translate("unfollow"); ?>');
                    } else {
                        button.text('<?php echo xclone_translate("follow"); ?>');
                        new Noty({
                            type: 'error',
                            text: "<?php echo xclone_translate("unfollow_user"); ?>",
                            timeout: 2000
                        }).show();
                    }
                },
                error: function(jqXHR, textStatus, errorThrown) {
                    console.log("Hata: " + textStatus + " - " + errorThrown);
                },
                complete: function() {
                    button.data('clicked', false);
                }
            });
        });
        checkFollowStatus();
    });
    function checkFollowStatus() {
        $('.xcloneUser-follow').each(function() {
            var form = $(this);
            var user_id = form.find('input[name="user_id"]').val();

            $.ajax({
                url: '/apps/ajax/profile/check-follow.phtml',
                method: 'POST',
                data: {
                    user_id: user_id
                },
                success: function(data) {
                    if (follow_status == '<?php echo xclone_translate("follow"); ?>') {
                        button.text('<?php echo xclone_translate("unfollow"); ?>');
                    } else {
                        button.text('<?php echo xclone_translate("follow"); ?>');
                        new Noty({
                            type: 'error',
                            text: "<?php echo xclone_translate("unfollow_user"); ?>",
                            timeout: 2000
                        }).show();
                    }
                },
                error: function(jqXHR, textStatus, errorThrown) {
                    console.log("Error: " + textStatus + " - " + errorThrown);
                }
            });
        });
    }
</script>