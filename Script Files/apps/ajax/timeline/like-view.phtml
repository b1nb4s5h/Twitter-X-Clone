<?php
require_once("../../../core/vipub_web_core.phtml");

$tweet_id = $_GET["tweet_id"];

$sql = "SELECT p.*, u.*, l.*
        FROM vipub_likes l
        JOIN vipub_users u ON l.user_id = u.id
        JOIN vipub_posts p ON l.post_id = p.p_id
        WHERE l.post_id = ? AND p.p_id = ?
        ORDER BY p.post_joined DESC";
$stmt = mysqli_prepare($conn, $sql);
mysqli_stmt_bind_param($stmt, "ii", $tweet_id, $tweet_id);
mysqli_stmt_execute($stmt);
$result = mysqli_stmt_get_result($stmt);
if ($result) {
  if (mysqli_num_rows($result) > 0) {
    while ($rows = mysqli_fetch_assoc($result)) {
      require("../../../themes/default/apps/timeline/include/page/likes.phtml");
    }
  } else {
    vipub_template("timeline/include/page/not-likes");
  }
} else {
  die("Hata: " . mysqli_error($conn));
}

mysqli_stmt_close($stmt);
mysqli_close($conn);
