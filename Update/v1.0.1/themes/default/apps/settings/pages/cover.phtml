                new Noty({
                    type: 'success',
                    text: '<?php echo vipub_translate("settings_page_save_value_desc_9"); ?>',
                    timeout: 2000
                }).show();
            },
            error: function(response) {
                new Noty({
                    type: 'error',
                    text: 'Only JPG, JPEG, PNG and GIF files are allowed.',
                    timeout: 2000
                }).show();
            }
        });
    });
});
