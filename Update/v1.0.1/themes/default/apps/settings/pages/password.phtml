            new Noty({
                type: 'error',
                text: '<?php echo vipub_translate("settings_page_save_value_desc_15"); ?>',
                timeout: 1500
            }).show();
        } else {
            $.ajax({
                type: 'POST',
                url: '/apps/ajax/settings/password.phtml',
                data: {
                    password: $('#password').val()
                },
                success: function(response) {
                    $('#password').val(response);
                    new Noty({
                        type: 'success',
                        text: '<?php echo vipub_translate("settings_page_save_value_desc_16"); ?>',
                        timeout: 1500
                    }).show();
                },
                error: function(response) {
                    alert('Hata olu≈ütu: ' + response.responseText);
                }
            });
        }
    });

    $('#password').attr('maxlength', 200);
